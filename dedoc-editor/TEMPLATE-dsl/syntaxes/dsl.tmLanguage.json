{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TEMPLATE-dsl",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"name": "constant.language.dsl",
			"patterns": [{
				"name": "constant.language.dsl",
				"match": "\\b(Title:|User story:|Summary:|Considered alternatives:|We chose:|Because:)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dsl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dsl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dsl"
}